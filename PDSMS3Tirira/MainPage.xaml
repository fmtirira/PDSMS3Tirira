<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDSMS3Tirira.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Navegación entre ventanas S3" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtClave" Placeholder="Ingrese la contraseña" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>

    </StackLayout>

</ContentPage>
